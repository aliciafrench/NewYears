<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="small-3 columns">
    <%= f.label :name, class:"right inline" %><br>
  </div>
  <div class="small-9 columns">
    <%= f.text_field :name %>
  </div>
</div>

<div class="row">
  <div class="small-3 columns">
    <%= f.label :start_time, class:"right inline" %><br>
  </div>
  <div class="small-9 columns">
    <%= f.text_field :start_time, :class => 'datepicker', :size => 10, :maxlength => 10 %> 
  </div>
</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
